<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9F3"
        tools:context=".HomeActivity">

        <!--    Header Atas-->
        <LinearLayout
            android:id="@+id/HeaderAtas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#FF5722"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--        Bagian Profil-->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/gambarProfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profil"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImageStyle" />

            <!--        text sambutan samping kanan profil-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_welcome_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apa yang ingin kamu masak hari ini?"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_rekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Resep Untuk Anda"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/HeaderAtas"
            app:layout_constraintTop_toBottomOf="@+id/HeaderAtas" />

        <!--        View Pager-->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_rekomendasi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--        Indicator Slider-->
        <LinearLayout
            android:id="@+id/indikator_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/view_pager_resep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--        Bagian Pencarian Resep-->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/indikator_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@android:drawable/ic_menu_search" />

                <EditText
                    android:id="@+id/edit_text_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:hint="Cari Resep"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        kode untuk membuat Text Kategori Resep-->
        <TextView
            android:id="@+id/text_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Kategori Resep"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_card" />

        <!--        Recylerview Kategori Resep-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_kategori_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintTop_toBottomOf="@id/text_kategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"/>

        <!--        Bagian Garis Pemisah-->
        <View
            android:id="@+id/garis_pemisah"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/rouded_garispemisah"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/rv_kategori_resep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </View>

        <!--        Bagian Text Semua Resep-->
        <TextView
            android:id="@+id/tv_semua_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semua Resep"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/garis_pemisah" />

        <!--        Membuat RecyleView untuk semua resep-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_semua_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_semua_resep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:spanCount="2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
