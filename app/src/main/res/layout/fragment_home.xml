<?xml version="1.0" encoding="utf-8"?>

<!-- ScrollView agar semua konten bisa di-scroll -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Layout utama -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9F3"
        tools:context=".HomeActivity">

        <!-- ============================
             Bagian Header Atas (Profil)
             ============================ -->
        <LinearLayout
            android:id="@+id/HeaderAtas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="55dp"
            android:background="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Foto Profil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/gambarProfil"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/profil"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/CircularImageStyle"/>

            <!-- Text sambutan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp">

                <!-- Sambutan 1 -->
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <!-- Sambutan 2 -->
                <TextView
                    android:id="@+id/tv_welcome_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa yang ingin kamu masak hari ini?"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Judul Rekomendasi Resep -->
        <TextView
            android:id="@+id/text_rekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rekomendasi Resep Untuk Anda"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/HeaderAtas"
            app:layout_constraintTop_toBottomOf="@+id/HeaderAtas" />

        <!-- ============================
             ViewPager2 untuk Slider Resep
             ============================ -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_rekomendasi"/>

        <!-- Indikator Slider (bulatan aktif/tidak aktif) -->
        <LinearLayout
            android:id="@+id/indikator_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_pager_resep">
        </LinearLayout>

        <!-- ============================
             Kotak Pencarian Resep
             ============================ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indikator_slider">

            <!-- Isi card pencarian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="15dp">

                <!-- Icon Search -->
                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@android:drawable/ic_menu_search"/>

                <!-- Input pencarian -->
                <EditText
                    android:id="@+id/edit_text_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:hint="Cari Resep" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Judul kategori -->
        <TextView
            android:id="@+id/text_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Kategori Resep"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_card" />

        <!-- RecyclerView kategori resep -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_kategori_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_kategori" />

        <!-- Garis Pembatas -->
        <View
            android:id="@+id/garis_pemisah"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rouded_garispemisah"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_kategori_resep" />

        <!--        Text Semua Resep     -->
        <TextView
            android:id="@+id/tv_semua_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Semua Resep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/garis_pemisah" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_semua_resep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_semua_resep"
            app:spanCount="2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>