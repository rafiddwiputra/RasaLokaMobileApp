<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:src="@drawable/ic_profile"/>

            <TextView
                android:id="@+id/txtGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C2C1B"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:text="Nama Pengguna"
                android:textColor="#9E9E9E"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/card_profile_info"
                android:paddingHorizontal="12dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/card_profile_info"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:text="********"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:backgroundTint="#FF7043"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAVIGATION (Pengganti BottomNavigationView) -->
    <LinearLayout
        android:id="@+id/bottomNavPlaceholder"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Home"
            android:gravity="center"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_home"
            android:paddingTop="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/navSaved"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Resep Tersimpan"
            android:gravity="center"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_saved"
            android:paddingTop="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Profil"
            android:gravity="center"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_profil_orange"
            android:paddingTop="8dp"
            android:textSize="12sp"
            android:textColor="#FF7043" /> <!-- Warna oranye untuk meniru status aktif -->

    </LinearLayout>

</FrameLayout>